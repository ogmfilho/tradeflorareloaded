<%= simple_form_for([@area, @trade, @report ]) do |f| %>
  <%= f.input :content, as: :text, label: "Deixe um comentário sobre a negociação:" %>
  <%= f.input :photos, as: :file, input_html: {multiple: true}, label: "Fotos" %>
  <%= f.button :submit, value: "Registrar comentário", class: "br-button button primary float-right" %>
<% end %>
