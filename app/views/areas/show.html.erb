<% provide(:title, 'Ver Área') %>
<br>
<br>
<div class="container">
  <div id="map"
    style="width: 100%; height: 300px;"
    data-polygon="<%= @polygon %>"
    data-boundpoly="<%= [@polygon.first, @polygon[(@polygon.count/2).to_i]] %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    <div class="map-overlay top">
    <div class="map-overlay-inner">
      <label>Transparência: <span id="slider-value"></span></label>
        <input
          id="slider"
          type="range"
          min="0"
          max="100"
          step="0"
          value="100"
        />
      </div>
    </div>

  </div>

  <div style="width: 100%; margin: 2px 0px 0px 0px;"><i class="far fa-question-circle fa-2x"></i>
     <div class="br-tooltip" id="tt10" info popover timer="8000" place="right">
      <div class="popover-image"><img src="../assets/z-map-helper-squared-100.gif" alt="Avatar">
      </div>
      <div><p class="text" style="color: white; font-size: 20px;">Gire ou incline o mapa com Ctrl (ou Cmd) + mouse</p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-10">
      <h3>Área Disponibilizada por <%= @area.user.name %>:</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Descrição</th>
            <th>Estado</th>
            <th>Município</th>
            <th>Hectares</th>
            <th>Bacia</th>

            <% if user_signed_in? %>

              <% if current_user.id == @area.user.id%>
                <th>Ação</th>
              <%end%>
            <%end%>
          </thead>

            <tr>
              <td><%= @area.description %></td>
              <td><%= @area.city.state.name %></td>
              <td><%= @area.city.name %></td>
              <td><%= @area.extension %></td>
              <td><%= @area.basin.name %></td>

            <% if user_signed_in? %>

              <%if current_user.id == @area.user.id%>

                <td><%= link_to @area, method: :delete, data: { confirm: "Excluir essa área?" } do %>
                    <i class="fa fa-trash destroy_area"></i>
                  <% end %>
                  <%= link_to edit_area_path(@area), data: { confirm: "Editar essa área?" } do %>
                    <i class="fa fa-edit edit_area"></i>
                  <% end %>
                <%end%>
              <%end%>
              </td>
            </tr>
        </tbody>
      </table>
    </div>

    <br>
    <div class="col-10">
      <h3>Fotos disponibilizadas por <%= @area.user.name %>:</h3>
        <% if !@area.photos.attached? %>
            <p> Nenhuma foto da área foi carregada </p>
        <% else %>
          <!--<div class="cards-areas">-->
          <div id="carousel-de-imagens" class="carousel slide" data-ride="carousel" data-interval="false">
            <ol class="carousel-indicators">


              <%@area.photos.each_with_index do |photo, index|%>

                <li data-target="#carousel-de-imagens" data-slide-to="<%=index%>"
                <%if index == 0 %>
                  class="active"
                <%end%>
                ></li>

              <%end%>

            </ol>

            <div class="carousel-inner">
              <%@area.photos.each_with_index do |photo, index|%>

                  <div
                    <%if index == 0  %>
                      class="carousel-item active"

                    <%else %>
                      class="carousel-item"
                      <%end%>
                    >

                    <%= cl_image_tag photo.key, crop: :fill, width:500 %>
                    <!--<img class="d-block w-100" src="..." alt="First slide">-->
                  </div>

              <%end%>

            <a class="carousel-control-prev" href="#carousel-de-imagens" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-de-imagens" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
      </div>
        <% end %>


    <br>
    <div>
      <% if user_signed_in? %>
        <% if current_user.id != @area.user.id && %>
        <%   (@area.trades.find_by(user_id: current_user).nil? || %>
        <%    @area.trades.find_by(user_id: current_user).status == "Recusada") %>
          <%= link_to "Estou interessado", new_area_trade_path(@area), class: "br-button primary mt-5" %>
        <%end%>
      <%end%>

      <p> <%= link_to 'Voltar para áreas disponíveis', areas_path, class: "br-button primary mt-5" %> </p>
    </div>
  </div>
</div>

