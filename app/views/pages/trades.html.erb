<div class="container">


  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Áreas de Interesse</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Descrição da Área</th>
            <th>Tamanho (ha)</th>
            <th>Bacia</th>
            <th>Proprietário</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Status</th>
            <th>Detalhes da proposta</th>
          </thead>
         <% @my_trades.each do |trade| %>
         <% area = trade.area %>
            <tr>
              <td><%= area.description %></td>
              <td><%= area.extension %></td>
              <td><%= area.basin.name %></td>
              <td><%= area.user.name %></td>
              <td><%= area.user.email %></td>
              <td><%= area.user.phone_number %></td>
              <td><%= trade.status %></td>
              <td><%= trade.details %></td>

            </tr>
          <% end %>
        </tbody>
         </table>
    <p> <%= link_to 'Ver todas as áreas', areas_path, class: "btn btn-success button-light-shadow" %> </p>
    <p> <%= link_to 'Voltar ao início', root_path, class: "btn btn-success button-light-shadow" %> </p>
    </div>
</div>
